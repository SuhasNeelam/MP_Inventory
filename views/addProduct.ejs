<html>
  <head>
    <meta charset="utf-8" />

    <title>Fashion Feet</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css" />
    <!-- Google Font: Source Sans Pro -->
    <link
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700"
      rel="stylesheet"
    />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
              <i class="fas fa-bars"></i
            ></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/" class="nav-link">Home</a>
          </li>
        </ul>
      </nav>
      <!-- /.navbar -->

      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link">
          <img src="FFlogo.jpg" class="brand-image img-circle elevation-3" />
          <span class="brand-text font-weight-light">Fashion Feet</span>
        </a>
        <!-- Sidebar -->
        <div class="sidebar"></div>
        <!-- /.sidebar -->
        <nav class="mt-2">
          <ul
            class="nav nav-pills nav-sidebar flex-column"
            data-widget="treeview"
            role="menu"
            data-accordion="false"
          >
            <li class="nav-item">
              <a href="#" class="nav-link">
                <i class="nav-icon far fa-circle text-info"></i>
                <p>Add Product</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/sale" class="nav-link">
                <i class="nav-icon far fa-circle text-info"></i>
                <p class="text">Sales Details</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/updateSales" class="nav-link">
                <i class="nav-icon far fa-circle text-info"></i>
                <p class="text">Update Sales</p>
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <section class="content-header">
          <h1>Fashion Feet Inventory Management</h1>
        </section>

        <section class="content">
          <div class="card" style="width: 50%">
            <div class="card-header bg-info">
              <strong>Update Stock Details</strong>
            </div>
            <form action="/addProduct" class="form" method="POST">
              <label for="product_id">Product ID</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="ID"
                name="product_id"
                required
              />

              <label for="brand">Brand</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Brand"
                name="brand"
                required
              />

              <label for="category">Category</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Category"
                name="category"
                required
              />

              <label for="name">Product Name</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Name"
                name="name"
                required
              />

              <label for="size">Size</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Size"
                name="size"
                required
              />

              <label for="quantity">Quantity</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Quantity"
                name="quantity"
                required
              />

              <label for="cost_price">Cost Price</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Cost Price"
                name="cost_price"
                required
              />

              <label for="selling_price">Selling Price</label>
              <input
                class="form-control"
                style="width: 50%; margin-left: 5px"
                type="text"
                placeholder="Selling Price"
                name="selling_price"
                required
              />

              <input
                class="btn btn-success"
                style="margin: 5px"
                type="submit"
                value="Submit"
              />
            </form>
          </div>
        </section>
      </div>
    </div>
  </body>
</html>
